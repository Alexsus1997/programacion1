// practico peso carta.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main ()

{   
	float peso,costoenvio;
	cout<<"ingrese peso:"<<endl;
	cin>>peso;
    if (peso<0)
	   cout<<"valor invalido";
	else
       if (peso<50)
       {
	     costoenvio=1.5*peso;
	     cout<<"mostrar costo de envio:"<<costoenvio<<endl;
       }
	   else
		   if (peso<=100)
           {
	          costoenvio=4*peso;
			  cout<<"mostrar costo de envio:"<<costoenvio<<endl;
		   }
		   else
			   if (peso<=200)
			   {
				   costoenvio=6*peso;
				   cout<<"mostrar costo envio:"<<costoenvio<<endl;
			   }
			   else 
				   if (peso<=350)
				   {
					   costoenvio=10.5*peso;
					   cout<<"costo de envio:"<<costoenvio<<endl;
				   }
				   else
					   if (peso<=500)
					   {
						   costoenvio=15.00*peso;
						   cout<<"costo de envio:"<<costoenvio<<endl;
					   }
					   else
						   cout<<"no se puede enviar la carta";
	getch();

}
				   

